<div class="itemsContainer">
<h1>Your Cart</h1>
<p><%= link_to "Continue Shopping", root_path %></p>

      <% @cart_items.each do |cart_item| %>
          <h4><li><%= cart_item.name %> $<%= cart_item.price%></li></h4>
      <% end %>

      <% total_price = @cart_items.map do |cart_item| %>
           <% cart_item.price %>
      <% end %>

<p><strong>Crave Total: $<%= total_price.sum(0.0).round(2) %></strong></p>

<div class="button"><%= button_to "Check Out", checkout_path, method: 'post' %></div>
<div class="button"><%= button_to "Edit Cart", cart_edit_path, method: 'get' %></div>
</div>

