<!DOCTYPE html>
<html>
  <head>
    <title>Craver App</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    
    <div class="cravefont">Craver</div>
   
    <div class="top-nav">
    <p class="textpad">Home</p>
    <p class="textpad">Login</p> 
    <p class="textpad">Signup</p> 
    <p class="textpad">View Cart</p>
    
     
    
    <p class="textpad">
    <% if current_user %>
        <%= button_to "Logout", logout_path, method: :delete %>
        
      <% else %>
        <%= link_to "Signup", signup_path %><br>
        </p>
        <p class="textpad">
        <%= link_to "Login", login_path %>
        
      <% end %>
    </p>
      </div>

    <div class="cart">
      <%= flash[:notice] %>
        <% if !@hide_cart %>
          <h3>My cart</h3>
          <% @cart_items.each do |cart_item| %>
            <li><%= cart_item.name %></li>
          <% end %>
        Craves in cart: <%= @cart_items.count %>
          <p><%= button_to "View cart", cart_path, method: "get"%></p>
        <% end %>
        </div>
        

        <% if flash.alert %>
          <% flash.alert.each do |message| %>
        <li><%= message%></li>
        <% end %>
      <% end %>

    </header>
    <%= yield %>
  </body>
</html>
