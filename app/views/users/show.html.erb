<h1>Hello, <%= @user.name %></h1>

<%= link_to "Edit Profile", edit_user_path(@user) %>
<%= link_to "Back to Search", root_path%>

<h3>Your Craves</h3>


<% @user.favorites.each do |favorite| %>
    <div class="eachItem">
    <%= image_tag("Square_200x200.png", :alt => "rss feed") %>
    <%= link_to favorite.item.name, item_path(favorite.item) %><br><br>
    <%= button_to "Add to Cart", add_to_cart_path(favorite.item), method: :patch %>
    <%= button_to "Remove Crave", favorite_path(favorite), method: :delete, params: { user_id: @user.id }, data: { confirm: "Really?" } %>
    </div>
<% end %>


